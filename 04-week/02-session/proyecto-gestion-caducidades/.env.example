# =====================================================
# Variables de Entorno - Sistema Gestión Caducidades
# =====================================================

# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gestion_caducidades
DB_USER=admin_gestion
DB_PASSWORD=password123

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# =====================================================
# CONFIGURACIÓN DE APLICACIÓN BACKEND
# =====================================================

# Spring Profiles
SPRING_PROFILES_ACTIVE=development

# Server Configuration
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api/v1

# JWT Configuration
JWT_SECRET=gestion-caducidades-secret-key-very-long-and-secure-2025
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# =====================================================
# CONFIGURACIÓN DE LOGGING
# =====================================================

# Log Levels
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_CORHUILA=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG

# Log File
LOGGING_FILE_PATH=./logs/gestion-caducidades.log
LOGGING_FILE_MAX_SIZE=10MB
LOGGING_FILE_MAX_HISTORY=30

# =====================================================
# CONFIGURACIÓN DE CACHE
# =====================================================

# Caffeine Cache
CACHE_MAXIMUM_SIZE=1000
CACHE_EXPIRE_AFTER_WRITE=600000
CACHE_EXPIRE_AFTER_ACCESS=300000

# Redis (para futuro)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000

# =====================================================
# CONFIGURACIÓN DE REPORTES
# =====================================================

# PDF Generation
PDF_TEMP_DIR=./temp/pdf
PDF_MAX_SIZE_MB=10
PDF_TIMEOUT_SECONDS=30

# Report Scheduling
REPORTS_SCHEDULE_WEEKLY=0 0 8 * * MON
REPORTS_EMAIL_ENABLED=false
REPORTS_EMAIL_RECIPIENTS=admin@corhuila.edu.co

# =====================================================
# CONFIGURACIÓN DE IMPORTACIÓN
# =====================================================

# CSV Import
IMPORT_MAX_FILE_SIZE_MB=50
IMPORT_BATCH_SIZE=100
IMPORT_TEMP_DIR=./temp/import
IMPORT_ALLOWED_EXTENSIONS=csv,xlsx
IMPORT_MAX_ROWS=10000

# Async Processing
IMPORT_THREAD_POOL_SIZE=5
IMPORT_QUEUE_CAPACITY=100
IMPORT_TIMEOUT_MINUTES=30

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Security
SECURITY_REQUIRE_SSL=false
SECURITY_SESSION_TIMEOUT=3600
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION=900

# Encryption
ENCRYPTION_ALGORITHM=AES
ENCRYPTION_KEY_LENGTH=256
ENCRYPTION_SECRET=another-secret-key-for-encryption-2025

# =====================================================
# CONFIGURACIÓN DE MONITOREO
# =====================================================

# Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when_authorized
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true

# Health Checks
HEALTH_CHECK_DB_TIMEOUT=5000
HEALTH_CHECK_DISK_THRESHOLD=10GB

# =====================================================
# CONFIGURACIÓN DE EMAIL (FUTURO)
# =====================================================

# SMTP Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@corhuila.edu.co
MAIL_PASSWORD=
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true

# Email Templates
MAIL_FROM_ADDRESS=noreply@corhuila.edu.co
MAIL_FROM_NAME=Sistema Gestión Caducidades
MAIL_REPLY_TO=soporte@corhuila.edu.co

# =====================================================
# CONFIGURACIÓN FRONTEND (ANGULAR)
# =====================================================

# API Configuration
NG_API_BASE_URL=http://localhost:8080/api/v1
NG_API_TIMEOUT=30000

# Features Flags
NG_FEATURE_DARK_MODE=true
NG_FEATURE_NOTIFICATIONS=true
NG_FEATURE_ADVANCED_FILTERS=true
NG_FEATURE_EXPORT_EXCEL=true

# UI Configuration
NG_DEFAULT_PAGE_SIZE=20
NG_MAX_PAGE_SIZE=100
NG_DEBOUNCE_TIME=300
NG_AUTO_REFRESH_INTERVAL=30000

# Charts and Visualization
NG_CHART_LIBRARY=ng2-charts
NG_CHART_THEME=light
NG_CHART_ANIMATION=true

# =====================================================
# CONFIGURACIÓN DE DESARROLLO
# =====================================================

# Development Tools
DEV_TOOLS_ENABLED=true
DEV_H2_CONSOLE_ENABLED=false
DEV_SWAGGER_ENABLED=true
DEV_ACTUATOR_ENABLED=true

# Test Configuration
TEST_DATABASE_URL=jdbc:h2:mem:testdb
TEST_DATABASE_DRIVER=org.h2.Driver
TEST_CONTAINERS_REUSE=true

# Mock Data
MOCK_DATA_ENABLED=true
MOCK_USERS_COUNT=10
MOCK_PRODUCTS_COUNT=100
MOCK_BATCHES_COUNT=500

# =====================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =====================================================

# Production Security
PROD_ENFORCE_HTTPS=true
PROD_SECURE_COOKIES=true
PROD_CONTENT_SECURITY_POLICY=default-src 'self'
PROD_FRAME_OPTIONS=DENY

# Production Performance
PROD_COMPRESSION_ENABLED=true
PROD_CACHE_HEADERS=true
PROD_GZIP_ENABLED=true

# Production Monitoring
PROD_LOGGING_LEVEL=WARN
PROD_METRICS_ENABLED=true
PROD_TRACING_ENABLED=true

# =====================================================
# CONFIGURACIÓN DE DOCKER
# =====================================================

# Docker Compose
COMPOSE_PROJECT_NAME=gestion-caducidades
COMPOSE_HTTP_TIMEOUT=120

# Container Resources
CONTAINER_MEMORY_LIMIT=1g
CONTAINER_CPU_LIMIT=0.5
CONTAINER_RESTART_POLICY=unless-stopped

# Volumes
POSTGRES_DATA_PATH=./data/postgres
LOGS_DATA_PATH=./data/logs
TEMP_DATA_PATH=./data/temp

# =====================================================
# CONFIGURACIÓN DE ALERTAS Y NOTIFICACIONES
# =====================================================

# Alert Thresholds
ALERT_RED_DAYS_THRESHOLD=7
ALERT_AMBER_DAYS_THRESHOLD=30
ALERT_GREEN_DAYS_THRESHOLD=31

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_WEBHOOK_ENABLED=false
NOTIFICATION_IN_APP_ENABLED=true

# Webhook Configuration
WEBHOOK_URL=
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# =====================================================
# CONFIGURACIÓN DE BACKUP Y RECUPERACIÓN
# =====================================================

# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# File Backup
FILE_BACKUP_ENABLED=false
FILE_BACKUP_PATH=./backups/files
FILE_BACKUP_COMPRESSION=true

# =====================================================
# CONFIGURACIÓN DE INTEGRACIÓN (FUTURO)
# =====================================================

# External APIs
ERP_API_URL=
ERP_API_KEY=
ERP_API_TIMEOUT=30000

POS_API_URL=
POS_API_KEY=
POS_API_TIMEOUT=15000

# Message Queue (para futuro)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# =====================================================
# CONFIGURACIÓN DE LOCALIZACIÓN
# =====================================================

# Internationalization
DEFAULT_LOCALE=es_CO
SUPPORTED_LOCALES=es_CO,en_US
DEFAULT_TIMEZONE=America/Bogota
DATE_FORMAT=dd/MM/yyyy
DATETIME_FORMAT=dd/MM/yyyy HH:mm:ss

# Currency
DEFAULT_CURRENCY=COP
CURRENCY_SYMBOL=$
DECIMAL_PLACES=2

# =====================================================
# CONFIGURACIÓN DE LÍMITES Y CUOTAS
# =====================================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_CAPACITY=200

# File Upload Limits
MAX_UPLOAD_SIZE=50MB
MAX_REQUEST_SIZE=60MB
UPLOAD_TEMP_PATH=./temp/uploads

# API Limits
MAX_PAGE_SIZE=1000
MAX_QUERY_COMPLEXITY=100
MAX_CONCURRENT_REQUESTS=50

